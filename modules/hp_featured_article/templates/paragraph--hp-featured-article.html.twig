{#
/**
 * @file
 * HP Featured Article paragraph bundle.
 *
 * @ingroup themeable
 */
#}
{% if hp_fa_title %}
	<section class="section--padded-top section--padded-bottom hp-featured-article" aria-label="Featured Article">
		{% if hp_show_wrapper %}
			<div class="compartment">
			{% endif %}
			<div class="section-content">

				<div class="block-header block-header--slim">
					<div class="block-header__title">
						<span class=" block-header__icon icon-paper"></span>
						<h2>{{ content.field_hp_fa_title }}</h2>
					</div>
				</div>

				<div class="section-content__block">
					<div class="silc-grid silc-grid--collapse">
						<div class="silc-grid__col silc-grid__col--4-large">
							<div class="section-content__img" style="background-image:url('{{ hp_fa_image }}')"></div>
						</div>
						<div class="silc-grid__col silc-grid__col--8-large">
							<h3>{{ hp_fa_title }}</h3>
							{{ hp_fa_summary }}
							<a href="{{ hp_fa_link }}" class="fancy-link">
								<span>Read the Article</span>
								<span class="icon-arrow-right"></span>
							</a>
						</div>
					</div>
				</div>

			</div>
			{% if hp_show_wrapper %}
			</div>
		{% endif %}
	</section>
{% endif %}

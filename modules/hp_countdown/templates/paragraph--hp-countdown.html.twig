{%
  set classes = [
  'paragraph',
  'countdown-paragraph',
  'countdown-paragraph-countdown',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  'countdown-paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  not paragraph.isPublished() ? 'paragraph--unpublished',
  'paragraph-id-' ~ paragraph.id(),
  content.field_hp_countdown_settings['#object'].field_hp_countdown_settings.countdown_settings.styles,
  content.field_hp_countdown_settings['#object'].field_hp_countdown_settings.countdown_settings.color_theme,
]
%}

{% if content.field_contdown_settings['#object'].field_contdown_settings.countdown_settings.styles == 'new_year' %}
  {{ attach_library('hp_countdown/new_year') }}
{% endif %}
{{ attach_library('hp_countdown/hp_countdown') }}
<div{{ attributes.addClass(classes).setAttribute('id', 'paragraph-countdown-id-' ~ paragraph.id()) }}>
  <div class="bg-inner"></div>
  <div class="hp-container">
    <div class="countdown-header">
      {% if content.field_countdown_title|render %}
        <h2>
          {{ content.field_countdown_title }}
        </h2>
      {% endif %}
      {{ content|without('field_hp_countdown_settings', 'field_hp_countdown_date', 'field_countdown_title') }}
    </div>
    <div
      class="hp-countdown-date hp-countdown-inline-block flipdown"
      id="paragraph-id-{{ paragraph.id() }}"
      data-date="{{ content.field_hp_countdown_date[0]['#attributes']['datetime']|date('U') }}">
      {{ dump (content.field_hp_countdown_date[0]['#attributes']['datetime']|date('U')) }}
    </div>
  </div>
</div>
{{ styles|raw }}
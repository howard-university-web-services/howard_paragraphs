{#
/**
 * @file
 * IP Table paragraph bundle.
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'section--padded-top',
    'section--padded-bottom'
  ]
%}

<section{{attributes.addClass(classes).setAttribute('id','hp-'~paragraph.id())}} aria-label="Table">
  {% if hp_show_wrapper %}
    <div class="compartment">
  {% endif %}

      {% if content.field_ip_tb_title[0] %}
        <div class="block-header">
            <div class="block-header__title">
                <span class=" block-header__icon icon-info"></span>
                <h2>{{ content.field_ip_tb_title }}</h2>
            </div>
        </div>
      {% endif %}

      {{ content.field_ip_tb_table }}

      <!-- Render without, so quickedit/etc works -->
      {{ content|without('field_ip_tb_title', 'field_ip_tb_table') }}

  {% if hp_show_wrapper %}
    </div>
  {% endif %}
</section>

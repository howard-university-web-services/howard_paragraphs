{#
/**
 * @file
 * HP Programs Feed paragraph bundle.
 *
 * @ingroup themeable
 */
#}

<section class="section--padded-top section--padded-bottom">
    <div class="compartment">
      <div class="block-header">
        <div class="block-header__title">
          <span class="block-header__icon icon-info"></span>
          <h2>{{ content.field_hp_pgf_title }}</h2>
        </div>
      </div>
      {% if hp_pgf_programs[0] %}
        <div class="silc-grid">
          {% for program in hp_pgf_programs %}
            <div class="silc-grid__col silc-grid__col--6-medium">
              <a href="{{ program.url }}" class="news-and-events__block" target="_blank">
                <!--<div class="news-and-events__img" style="background-image:url('{{ evnt.image.large }}')"></div>-->
                <div class="news-and-events__desc">
                  <span class="news-and-events__date">{{ program.related_degrees }}</span>
                  <h3 class="news-and-events__title header--h3-small">{{ program.label }}</h3>
                  {{ program.degree_classification }}
                  {% if program.summary %}
                    {{ program.summary|raw }}
                  {% else %}
                  <p>{{ program.body_trimmed }}</p>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      {% else %}
      <div class="silc-grid">
          <div class="silc-grid__col silc-grid__col--12-medium">
            <p>Sorry, no programs match that criteria.</p>
          </div>
        </div>
      {% endif %}
  </div>
</section>

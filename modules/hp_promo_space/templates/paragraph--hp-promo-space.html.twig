{#
/**
 * @file
 * HP Promo Space paragraph bundle.
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'section--padded-top',
    'section--padded-bottom'
  ]
%}

<section{{attributes.addClass(classes).setAttribute('id','hp-'~paragraph.id())}} aria-label="Promotional space">
  {% if hp_show_wrapper %}
    <div class="compartment">
  {% endif %}

      <div class="promotional-space">
        <div class="silc-grid silc-grid--collapse">
          {% if hp_promo_image %}
            <div class="silc-grid__col silc-grid__col--6-medium">
          {% else %}
            <div class="silc-grid__col silc-grid__col--12-medium">
          {% endif %}
            <h2 class="header--h2">{{ content.field_hp_promo_title }}</h2>
            {{ content.field_hp_promo_text }}
            {% for key, item in content.field_hp_promo_links %}
              {%  if key|first != '#' %}
                <a href="{{ content.field_hp_promo_links[key]['#url'] }}" class="fancy-link"{% if content.field_hp_promo_links[key]['#options'].attributes.target %} target="{{ content.field_hp_promo_links[key]['#options'].attributes.target }}"{% endif %}>
                  <span>{{ content.field_hp_promo_links[key]['#title'] }}</span>
                  <span class="icon-arrow-right"></span>
                </a>
              {% endif %}
            {% endfor %}
          </div>
          {% if hp_promo_image %}
            <div class="silc-grid__col silc-grid__col--6-medium">
              <div class="section-content__img"><img src="{{ hp_promo_image }}" alt="{{ hp_promo_image_alt }}"></div>
            </div>
          {% endif %}
        </div>
      </div>

  {% if hp_show_wrapper %}
    </div>
  {% endif %}
</section>
